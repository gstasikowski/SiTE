<Window x:Class="SiTE.Views.PasswordInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SiTE.Views"
        mc:Ignorable="d"
        d:DesignHeight="200" d:DesignWidth="800"
        Title="{DynamicResource WindowPasswordInput}" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Closing="Window_Closing" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel>
            <Label Content="{DynamicResource MessagePasswordInput}" HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top"/>
            <PasswordBox Name="txtPassword" Margin="10"></PasswordBox>
            <Button Content="OK" Height="20" Width="40" Margin="0, 0, 0, 10" Click="SubmitPassword" IsDefault="True"></Button>
        </StackPanel>
    </Grid>
</Window>
